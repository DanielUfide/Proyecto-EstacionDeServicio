    <!-- Modal Agregar factura -->
    <div class="modal modal-lg fade" id="agregarFactura" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Agregar factura</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formAgregarFactura">
                        <label for="txtIDFactura">ID Factura</label>
                        <input type="text" name="txtIDFactura" id="txtIDFactura" class="form-control" placeholder="Indique el ID de la factura" required>
                        <label for="txtIDUsuario">Usuario</label>
                        <input type="text" name="txtIDUsuario" id="txtIDUsuario" class="form-control" placeholder="Indique el ID del usuario" required>
                        <label for="txtDetalle">Detalle</label>
                        <input type="text" name="txtDetalle" id="txtDetalle" class="form-control" placeholder="Indique el detalle de la factura" required>
                        <label for="txtMonto">Monto</label>
                        <input type="text" name="txtMonto" id="txtMonto" class="form-control" placeholder="Indique el monto total de la factura" required>

                        <div class="row mt-xl-3 justify-content-center text-center">
                            <div class="col-md-12">
                                <input type="button" onclick="guardarFactura()" value="Guardar factura" class="btn bg-gradient-dark">
                                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal  editar factura-->
    <div class="modal modal-lg fade" id="actualizarFactura" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Actualizar factura</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="">
                        <label for="txtIDFactura">ID Factura</label>
                        <input type="text" name="txtIDFactura" id="txtIDFactura" class="form-control" placeholder="Indique el ID de la factura" required>
                        <label for="txtIDUsuario">Usuario</label>
                        <input type="text" name="txtIDUsuario" id="txtIDUsuario" class="form-control" placeholder="Indique el ID del usuario" required>
                        <label for="txtDetalle">Detalle</label>
                        <input type="text" name="txtDetalle" id="txtDetalle" class="form-control" placeholder="Indique el detalle de la factura" required>
                        <label for="txtMonto">Monto</label>
                        <input type="text" name="txtMonto" id="txtMonto" class="form-control" placeholder="Indique el monto total de la factura" required>

                        <div class="row mt-xl-3 justify-content-center text-center">
                            <div class="col-md-12">
                                <input type="submit" onclick="actualizarFactura()" value="Actualizar factura" class="btn bg-gradient-dark">
                                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>

    </div>
    <!-- Modal eliminar Inventario -->
    <div class="modal modal-lg fade" id="eliminarFactura" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Eliminar factura</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar esta factura?</p>
                    <input type="hidden" id="idFacturaEliminar" />
                    <div class="row mt-xl-3 justify-content-center text-center">
                        <div class="col-md-12">
                            <input type="submit" onclick="eliminarFactura()" value="Eliminar factura" class="btn bg-gradient-dark">
                            <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
