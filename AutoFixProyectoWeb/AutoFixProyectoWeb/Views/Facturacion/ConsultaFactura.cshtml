    <div class="col-12" id="seccionFactura">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <div class="row">
                    <div class="col-8 d-flex align-items-center">
                        <h6 class="mb-0">Facturas</h6>
                    </div>
                    <div class="col-md-4 text-end">
                        <a data-bs-toggle="modal" data-bs-target="#agregarFactura">
                            <i class="fa fa-plus text-secondary mb-3"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2 mt-3">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID Factura</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Usuario</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Detalle</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Monto</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.id_factura</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs text-secondary mb-0">@item.id_usuario</p>
                                    </td>

                                    <td>
                                        <p class="text-xs text-secondary mb-0">@item.detalle</p>
                                    </td>
                                    <td>
                                        <p class="text-xs text-secondary mb-0">@item.monto</p>
                                    </td>
                                    <td class="align-middle seccion-editar">
                                        <h6 class="idFactura" hidden>@item.id_factura</h6>
                                        <a class=" font-weight-bold text-xs btn-editar btn-link" data-toggle="tooltip"
                                           data-original-title="Editar" data-bs-toggle="modal" data-bs-target="#actualizarFactura" style="color: #cb0c9f">
                                            Editar
                                        </a>
                                    </td>
                                    <td class="align-middle seccion-eliminar">
                                        <h6 class="idFactura" hidden>@item.id_factura</h6>
                                        <a class=" font-weight-bold text-xs btn-eliminar btn-eliminar btn-link" data-toggle="tooltip"
                                           data-id-factura="@item.id_factura" data-original-title="Eliminar" data-bs-toggle="modal" data-bs-target="#eliminarFactura" style="color: #cb0c9f">
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
