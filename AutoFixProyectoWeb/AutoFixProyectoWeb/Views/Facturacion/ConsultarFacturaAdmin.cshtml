
@model List<AutoFixProyectoWeb.Entities.DetalleFacturas>

@{
    ViewBag.Title = "Facturas";
    Layout = "~/Views/Shared/_LayoutMenus.cshtml";
    var pendientesQueryString = Request.QueryString["pendientes"];

}

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur"
         navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Principal</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Facturas</li>
                </ol>

            </nav>
        </div>
    </nav>
    <div class="col-12" id="seccionFactura">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <div class="row">
                    <div class="col-8 d-flex align-items-center">
                        <h6 class="mb-0">Facturas</h6>
                    </div>
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2 mt-3">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID Factura</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Usuario</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Detalle</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Monto</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Método Pago</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.id_factura</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs text-secondary mb-0">@item.nombre</p>
                                    </td>

                                    <td>
                                        <p class="text-xs text-secondary mb-0">@item.detalle</p>
                                    </td>
                                    <td>
                                        <p class="text-xs text-secondary mb-0">@item.monto</p>
                                    </td>
                                    <td>
                                        <p class="text-xs text-secondary mb-0">@item.metodo_pago</p>
                                    </td>
                                    @if (pendientesQueryString.Contains("true")) {

                                    <td class="align-middle">
                                        <a class="text-secondary font-weight-bold text-xs" onclick="openModal(@item.id_factura)">
                                            Procesar Pago
                                        </a>
                                    </td>
                                    }
                                    <td class="align-middle seccion-editar">
                                        <h6 class="idFactura" hidden>@item.id_factura</h6>
                                        <a class=" font-weight-bold text-xs btn-editar btn-link" data-toggle="tooltip"
                                           data-original-title="Editar" data-bs-toggle="modal" data-bs-target="#actualizarFactura" style="color: #cb0c9f">
                                            Editar
                                        </a>
                                    </td>
                                    <td class="align-middle seccion-eliminar">
                                        <h6 class="idFactura" hidden>@item.id_factura</h6>
                                        <a class=" font-weight-bold text-xs btn-eliminar btn-eliminar btn-link" data-toggle="tooltip"
                                           data-id-factura="@item.id_factura" data-original-title="Eliminar" data-bs-toggle="modal" data-bs-target="#eliminarFactura" style="color: #cb0c9f">
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal procesar pago-->
    <div class="modal modal-lg fade" id="procesarPago" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Procesar Pago</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                        <input type="text" class="form-control" id="inputParam" name="param" readonly style="display: none">
                        <label for="txtMetodoPago">Método de Pago</label>
                        <select id="txtMetodoPago" class="form-control">
                            <option value="Contado">Contado</option>
                            <option value="Tarjeta">Tarjeta</option>
                        </select>

                        <div class="row mt-xl-3 justify-content-center text-center">
                            <div class="col-md-12">
                                <input type="submit" onclick="procesarPago()" value="Procesar Pago" class="btn bg-gradient-dark">
                                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
        <!-- Modal  editar factura-->
        <div class="modal modal-lg fade" id="actualizarFactura" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Actualizar factura</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                            <label for="txtIDFactura">ID Factura</label>
                            <input type="text" name="txtIDFactura" id="txtIDFactura" class="form-control" placeholder="Indique el ID de la factura" required>
                            <label for="txtIDUsuario">Usuario</label>
                            <input type="text" name="txtIDUsuario" id="txtIDUsuario" class="form-control" placeholder="Indique el ID del usuario" required>
                            <label for="txtDetalle">Detalle</label>
                            <input type="text" name="txtDetalle" id="txtDetalle" class="form-control" placeholder="Indique el detalle de la factura" required>
                            <label for="txtMonto">Monto</label>
                            <input type="text" name="txtMonto" id="txtMonto" class="form-control" placeholder="Indique el monto total de la factura" required>

                            <div class="row mt-xl-3 justify-content-center text-center">
                                <div class="col-md-12">
                                    <input type="submit" onclick="actualizarFactura()" value="Actualizar factura" class="btn bg-gradient-dark"/>
                                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                </div>
                            </div>

                    </div>
                </div>
            </div>

        </div>
        <!-- Modal eliminar factura -->
        <div class="modal modal-lg fade" id="eliminarFactura" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Eliminar factura</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>¿Está seguro que desea eliminar esta factura?</p>
                        <input type="hidden" id="idFacturaEliminar" />
                        <div class="row mt-xl-3 justify-content-center text-center">
                            <div class="col-md-12">
                                <input type="submit" onclick="eliminarFactura()" value="Eliminar factura" class="btn bg-gradient-dark">
                                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</main>
@section Scripts {
    <script src="~/Content/assets/js/custom/facturaAdmin.js"></script>
    }

