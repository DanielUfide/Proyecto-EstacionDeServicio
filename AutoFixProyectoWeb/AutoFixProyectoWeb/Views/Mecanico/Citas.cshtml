@model  List<AutoFixProyectoWeb.Models.Response.Proyecto_Mecanico>

@{
    Layout = "~/Views/Mecanico/_Layout.cshtml";
}
<style>
    .card-hover:hover {
        transform: scale(1.05); /* Aumenta el tamaño de la carta al 105% */
        transition: transform 0.3s ease; /* Transición suave */
    }
</style>

<div class="main-content position-relative bg-gray-100 max-height-vh-100 h-100">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur"
         navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Citas hoy</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Citas hoy</h6>
            </nav>
        </div>
    </nav>
    <!-- End Navbar -->

    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="card-title">Citas para hoy</h4>
            <p>@DateTime.Today.ToString("d")</p>
        </div>
        <div class="row mt-4">
            @foreach (var proyecto in Model)
            {
                <div class="col-md-4 card-hover" role="button">
                    <a href="@Url.Action("DetalleCita", "mecanico", new { idProyecto = proyecto.PROYECTO.ID_PROYECTO })" style="text-decoration: none; color: inherit;">
                        <div class="card mb-4">
                            <img src="~/Content/assets/img/cars/bmw.jpeg" class="card-img-top" alt="Imagen del vehículo">
                            <div class="card-body">
                                <h5 class="card-title">Vehiculo: @proyecto.PROYECTO.ID_VEHICULO</h5>
                                <p class="card-text">Cliente: @proyecto.PROYECTO.NOMBRE_CLIENTE</p>
                            </div>

                        </div>

                    </a>
                </div>

            }


            @if (Model.Count == 0)
            {
                <p class="font-italic text-secondary text-center">No hay citas para hoy.</p>
            }


        </div>
    </div>


</div>