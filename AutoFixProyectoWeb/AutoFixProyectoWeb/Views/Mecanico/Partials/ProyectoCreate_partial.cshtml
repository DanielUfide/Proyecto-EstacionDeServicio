@model AutoFixProyectoWeb.ViewModels.MecanicoVM
@{
    ViewBag.Title = "ProyectoCreate_partial";
}

<!-- Modal Crear Proyecto -->
<div class="modal modal-lg fade" id="agregarProyecto" tabindex="-1" aria-labelledby="agregarProyecto"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="agregarProyectoLabel">Solicitud de piezas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Mecanico", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <label>Seleccione el proyecto</label>
                    <select name="idProyecto" class="form-control">
                        <option selected hidden>Seleccione el Proyecto</option>
                        @foreach (var proyecto in @Model.proyecto)
                        {
                            <option value="@proyecto.ID_PROYECTO">@proyecto.ID_VEHICULO</option>

                        }

                    </select>
                    <label class="mt-xl-4">Seleccione la pieza</label>
                    <select name="idInventario" class="form-control">
                        <option selected hidden>Seleccione el Servicio</option>
                        @foreach (var inventario in @Model.inventario)
                        {
                            <option value="@inventario.ID_INVENTARIO">@inventario.NOMBRE</option>

                        }
                    </select>

                    <label for="txtComentario" class="mt-xl-4">Cantidad</label>
                    <textarea name="cantidad" id="txtCantidad" cols="30" rows="4" placeholder="Agregar cantidad"
                              class="form-control"></textarea>
                    <div class="row mt-xl-3 justify-content-center text-center">
                        <div class="col-md-12">
                            <input type="submit" value="Abrir Solicitud" class="btn bg-gradient-dark">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
