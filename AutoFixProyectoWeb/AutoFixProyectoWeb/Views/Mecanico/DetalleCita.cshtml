@model AutoFixProyectoWeb.ViewModels.Mecanico.MecanicoDetalleCitaVM

@{
    Layout = "~/Views/Mecanico/_Layout.cshtml";
}

<div class="main-content position-relative bg-gray-100 max-height-vh-100 h-100">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur"
         navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Detalle de cita</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Detalle de cita</h6>
            </nav>
        </div>
    </nav>
    <!-- End Navbar -->

    <div class="container-fluid">


        <div class="d-flex justify-content-between align-items-center">
            <h4 class="card-title">Servicios del Proyecto</h4>

            <div class="dropdown">
                <button class="btn btn-primary" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    Agregar
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#agregarServicio" href="#">Agregar servicio</a></li>
                    <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#agregarProducto" href="#">Agregar producto</a></li>
                </ul>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tipo</th>
                        <th>Descripción</th>
                        <th>Fecha</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        int codigo = 1;
                    }

                    @*SERVICIOS*@

                    @foreach (var servicio in Model.servicios)
                    {
                        <tr>
                            <td>@codigo</td>
                            <td>Servicio</td>
                            <td>@servicio.DESCRIPCION</td>
                            <td>@servicio.FECHA</td>
                            <td>1</td>
                            <td>@servicio.PRECIO.ToString("C")</td>
                            <td>@((servicio.PRECIO * 1).ToString("C"))</td>
                        </tr>

                        codigo++;
                    }

                    @*PRODUCTOS*@

                    @foreach (var producto in Model.productos)
                    {
                        <tr>
                            <td>@codigo</td>
                            <td>Producto / Pieza</td>
                            <td>@producto.INVENTARIO.NOMBRE</td>
                            <td>@producto.FECHA</td>
                            <td>@producto.CANTIDAD</td>
                            <td>@(producto.INVENTARIO.PRECIO_VENTA?.ToString("C"))</td>
                            <td>@((producto.INVENTARIO.PRECIO_VENTA * producto.CANTIDAD)?.ToString("C"))</td>
                        </tr>
                        codigo++;
                    }
                </tbody>
            </table>
            @if (Model.servicios.Count == 0 && Model.productos.Count == 0)
            {
                <p class="font-italic text-secondary text-center">El vehiculo no cuenta con servicios o productos / piezas realizados.</p>
            }
        </div>
    </div>
</div>
@Html.Partial("Partials/ServicioCreate_partial", Model.addServiceModel);
@Html.Partial("Partials/AddProduct_partial", Model.addProductModal);