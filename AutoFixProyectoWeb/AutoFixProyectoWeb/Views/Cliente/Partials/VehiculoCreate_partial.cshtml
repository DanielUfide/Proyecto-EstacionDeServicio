
@model AutoFixProyectoWeb.Entities.VehiculoEnt

@{
    ViewBag.Title = "ProyectoCreate_partial";
}

<!-- Modal Crear Servicio -->
<div class="modal modal-lg fade" id="agregarServicio" tabindex="-1" aria-labelledby="agregarServicio"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="agregarProyectoLabel">Agregar Servicio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("guardarVehiculoController_void", "Cliente", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()


                    <label class="mt-xl-4">Placa</label>
                    <input class="form-control" type="text" name="placa" required />

                    <label class="mt-xl-4">Marca</label>
                    <input class="form-control" type="text" name="marca" required />

                    <label class="mt-xl-4">Modelo</label>
                    <input class="form-control" type="text" name="modelo" required />

                    <label class="mt-xl-4">Chasis</label>
                    <input class="form-control" type="text" name="chasis" required />

                    <input class="form-control" type="hidden" value="@(Model.estado ? "True" : "False")" name="estado" required />
                    <input class="form-control" type="hidden" value="@Model.id_usuario" name="id_usuario" required />

                    <div class="row mt-xl-3 justify-content-center text-center">
                        <div class="col-md-12">
                            <input type="submit" value="Agregar Vehiculo" class="btn bg-gradient-dark">
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
