@model  List<AutoFixProyectoWeb.Models.Response.Proyecto_Cliente>


@{
    ViewBag.Title = "ProyectosList_partial";
}

<div class="col-12 mt-4">
    <div class="card mb-4">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-1">Proyectos</h6>
            <p class="text-sm">En esta sección se encontrarán todos los carros en revisión</p>
        </div>
        <div class="card-body p-3">
            <div class="row">


                @foreach (var proyecto in Model)
                {
                    <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                        <div class="card card-blog card-plain">
                            <div class="position-relative">
                                <a class="d-block shadow-xl border-radius-xl">
                                    <img src="~/Content/assets/img/cars/Porche GT3 RS.jpeg" alt="img-blur-shadow"
                                         class="img-fluid shadow border-radius-xl w-100 h-100" style="object-fit: cover;"
                                         style="width: 500px;">
                                </a>
                            </div>
                            <div class="card-body px-1 pb-0">
                                <p class="text-gradient text-dark mb-2 text-sm">Project #@proyecto.PROYECTO.ID_PROYECTO </p>
                                <a href="javascript:;">
                                    <h5>
                                        @proyecto.PROYECTO.ID_VEHICULO
                                    </h5>
                                </a>
                                <p class="mb-4 text-sm">
                                    @if (proyecto.SERVICIOS.Count == 0)
                                    {                                        
                                         <p class="font-italic text-secondary text-center">Sin servicios.</p>
                                    }
                                    else
                                    {
                                         @String.Join(", ", proyecto.SERVICIOS.Select(s => s.SERVICIO))
                                    }

                                </p>
                                <div class="d-flex align-items-center justify-content-between">
                                    <a class="btn btn-outline-primary btn-sm mb-0" href="/Proyecto/proyectocliente?idProyecto=@proyecto.PROYECTO.ID_PROYECTO">View Project</a>
                                    <div class="avatar-group mt-2">
                                        <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip"
                                           data-bs-placement="bottom" title="Elena Morison">
                                            <img alt="Image placeholder" src="~/Content/assets/img/team-1.jpg">
                                        </a>
                                        <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip"
                                           data-bs-placement="bottom" title="Ryan Milly">
                                            <img alt="Image placeholder" src="~/Content/assets/img/team-2.jpg">
                                        </a>
                                        <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip"
                                           data-bs-placement="bottom" title="Nick Daniel">
                                            <img alt="Image placeholder" src="~/Content/assets/img/team-3.jpg">
                                        </a>
                                        <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip"
                                           data-bs-placement="bottom" title="Peterson">
                                            <img alt="Image placeholder" src="~/Content/assets/img/team-4.jpg">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                    <div class="card h-100 card-plain border">
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            <a data-bs-toggle="modal" data-bs-target="#agregarProyecto">
                                <i class="fa fa-plus text-secondary mb-3"></i>
                                <h5 class=" text-secondary"> Agregar Proyecto </h5>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

