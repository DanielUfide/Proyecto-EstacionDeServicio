@model List<AutoFixProyectoWeb.ModelDB.VEHICULOS_DE_CLIENTE_Result>
@{
    ViewBag.Title = "VehiculosList_partial";
}

<div class="col-12 col-xl-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <div class="row">
                <div class="col-md-8 d-flex align-items-center">
                    <h6 class="mb-0">Vehículos</h6>
                </div>
                <div class="col-md-4 text-end">
                    <a href="javascript:;">
                        <i class="fas fa-plus text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top"
                           title="Agregar Vehiculo"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <ul class="list-group">
                @foreach (var vehiculo in @Model)
                {
                    <li class="list-group-item border-0 d-flex align-items-center px-0 mb-2">
                        <div class="avatar me-3">
                            <img src="~/Content/assets/img/cars/bmw.jpeg" alt="kal" class="border-radius-lg shadow h-100 w-100"
                                 style="object-fit: cover;">
                        </div>
                        <div class="d-flex align-items-start flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">@vehiculo.PLACA</h6>
                            <p class="mb-0 text-xs">@vehiculo.MARCA</p>
                        </div>
                        <a class="btn btn-link pe-3 ps-0 mb-0 ms-auto" href="javascript:;">View</a>
                    </li>

                }
            </ul>
        </div>
    </div>
</div>

