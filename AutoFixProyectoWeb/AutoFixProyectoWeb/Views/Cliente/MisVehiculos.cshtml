@model AutoFixProyectoWeb.ViewModels.ClienteView.VehiculoCreateMV
@{
    ViewBag.Title = "MisVehiculos";
    Layout = "~/Views/Admin/_Layout.cshtml";
}


<div class="main-content position-relative bg-gray-100 max-height-vh-100 h-100">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur"
         navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Vehiculos</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Mis Vehiculos</h6>
            </nav>
        </div>
    </nav>
    <!-- End Navbar -->

    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="card-title">Lista de Vehículos</h4>
            <button data-bs-toggle="modal" data-bs-target="#agregarServicio" class="btn btn-primary">
                <i class="fa fa-plus text-secondary text-white"></i>
                Agregar vehiculo                
            </button>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Placa</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Chasis</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vehiculo in Model.vehiculos)
                    {
                        <tr>
                            <td>@vehiculo.PLACA</td>
                            <td>@vehiculo.MARCA</td>
                            <td>@vehiculo.MODELO</td>
                            <td>@vehiculo.CHASIS</td>
                            <td>
                                <!-- Botón para abrir el modal -->
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#agregarVehiculo_@vehiculo.PLACA">
                                    Actualizar
                                </button>
                                <!-- Botón para abrir el modal -->
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#eliminarVehiculo_@vehiculo.PLACA">
                                    Eliminar
                                </button>
                            </td>
                            
                        </tr>
                        @Html.Partial("Partials/VehiculoUpdate_partial", vehiculo);
                        @Html.Partial("Partials/VehiculoDelete_partial", vehiculo);
                    }
                </tbody>
            </table>
            @if (Model.vehiculos.Count == 0)
            {
                <p class="font-italic text-secondary text-center">Aun no cuenta con vehiculos.</p>
            }
        </div>
    </div>
</div>

@Html.Partial("Partials/VehiculoCreate_partial", Model.addVehicleModel);
